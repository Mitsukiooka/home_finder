%section.contact
  .container
    .row
      .col-sm-12.section-t8
        .row
          .col-md-12
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .row
                .col-md-6.mb-3
                  .form-group
                    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control form-control-lg form-control-a'
                .col-md-6.mb-3
                  .form-group
                    = f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control form-control-lg form-control-a'
                - if devise_mapping.rememberable?
                  .col-md-12.mb-3
                    .form-group
                      = f.check_box :remember_me
                      = f.label :remember_me
                .col-md-12.text-center
                  = f.submit "Log in", class: 'btn btn-a'
= render "devise/shared/links"