%section.property-single.nav-arrow-b
  .container
    -if @room.images.present?
      .row.justify-content-center
        .col-lg-8
          #property-single-carousel.swiper-container
            .swiper-wrapper
              -@room.images.each do |image|
                .carousel-item-b.swiper-slide
                  =image_tag image.variant(gravity: :center, resize:"1920x960^", crop:"1920x960+0+0").processed
          .property-single-carousel-pagination.carousel-pagination
    .row
      .col-sm-12
        .row.justify-content-between
          .col-md-5.col-lg-4
            .property-price.d-flex.justify-content-center.foo
              .card-header-c.d-flex
                .card-box-ico
                  %span.bi.bi-cash $
                .card-title-c.align-self-center
                  %h5.title-c
                    #{@room.rent}
            .property-summary
              .row
                .col-sm-12
                  .title-box-d.section-t4
                    %h3.title-d Quick Summary
              .summary-list
                %ul.list
                  %li.d-flex.justify-content-between
                    %strong Property ID:
                    %span 1134
                  %li.d-flex.justify-content-between
                    %strong Location:
                    %span Chicago, IL 606543
                  %li.d-flex.justify-content-between
                    %strong Property Type:
                    %span House
                  %li.d-flex.justify-content-between
                    %strong Status:
                    %span Sale
                  %li.d-flex.justify-content-between
                    %strong Area:
                    %span
                      340m
                      %sup 2
                  %li.d-flex.justify-content-between
                    %strong Beds:
                    %span 4
                  %li.d-flex.justify-content-between
                    %strong Baths:
                    %span 2
                  %li.d-flex.justify-content-between
                    %strong Garage:
                    %span 1
          .col-md-7.col-lg-7.section-md-t3
            .row
              .col-sm-12
                .title-box-d
                  %h3.title-d Property Description
            .property-description
              %p.description.color-text-a
                #{@room.comment}
            .row.section-t3
              .col-sm-12
                .title-box-d
                  %h3.title-d Amenities
            .amenities-list.color-text-a
              %ul.list-a.no-margin
                %li Balcony
                %li Outdoor Kitchen
                %li Cable Tv
                %li Deck
                %li Tennis Courts
                %li Internet
                %li Parking
                %li Sun Room
                %li Concrete Flooring
      .col-md-10.offset-md-1
        %ul#pills-tab.nav.nav-pills-a.nav-pills.mb-3.section-t3{:role => "tablist"}
          %li.nav-item
            %a#pills-video-tab.nav-link.active{"aria-controls" => "pills-video", "aria-selected" => "true", "data-bs-toggle" => "pill", :href => "#pills-video", :role => "tab"} Video
          %li.nav-item
            %a#pills-plans-tab.nav-link{"aria-controls" => "pills-plans", "aria-selected" => "false", "data-bs-toggle" => "pill", :href => "#pills-plans", :role => "tab"} Floor Plans
          %li.nav-item
            %a#pills-map-tab.nav-link{"aria-controls" => "pills-map", "aria-selected" => "false", "data-bs-toggle" => "pill", :href => "#pills-map", :role => "tab"} Ubication
        #pills-tabContent.tab-content
          #pills-video.tab-pane.fade.show.active{"aria-labelledby" => "pills-video-tab", :role => "tabpanel"}
            %iframe{:allowfullscreen => "", :frameborder => "0", :height => "460", :mozallowfullscreen => "", :src => "https://player.vimeo.com/video/73221098", :webkitallowfullscreen => "", :width => "100%"}
          #pills-plans.tab-pane.fade{"aria-labelledby" => "pills-plans-tab", :role => "tabpanel"}
            %img.img-fluid{:alt => "", :src => "assets/img/plan2.jpg"}/
          #pills-map.tab-pane.fade{"aria-labelledby" => "pills-map-tab", :role => "tabpanel"}
