%h1
  Home Finder
.menu
  -if user_signed_in?
    %h2
      =link_to '公開中の貸し部屋一覧', user_rooms_path
    -if @applications.present?
      -@applications.each do |application|
        =link_to "#{application.room.name}", user_room_path(application.room.id)
    -if current_user.user_profile.present?
      %h2
        =link_to 'ユーザー情報', user_user_profile_path(current_user.user_profile.id)
    -else
      %h2
        =link_to 'ユーザー情報作成', new_user_user_profile_path
    =link_to 'ログアウト', destroy_user_session_path
  -else
    %h2
      = link_to 'ユーザー登録', new_user_registration_path
    %h2
      = link_to 'ユーザーログイン', new_user_session_path
.body
  %p
    ユーザー用ページ